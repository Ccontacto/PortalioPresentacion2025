{
  "$schema": "https://design-tokens.org/dtcg/v1.0/schema.json",
  "meta": {
    "standard": "DTCG",
    "version": "1.0.0",
    "wcag": "2.2-AA",
    "locale": "es-MX",
    "description": "Tokens atómicos 2025 con modos y alias semánticos (light/dark/high-contrast)."
  },
  "$extensions": {
    "modes": ["light", "dark", "high-contrast"]
  },
  "color": {
    "neutral": {
      "near-black": {"$type": "color", "value": "#0A0A0A"},
      "950": {"$type": "color", "value": "#0E0E0E"},
      "900": {"$type": "color", "value": "#1A1A1A"},
      "800": {"$type": "color", "value": "#2A2A2A"},
      "700": {"$type": "color", "value": "#3F3F3F"},
      "600": {"$type": "color", "value": "#525252"},
      "500": {"$type": "color", "value": "#737373"},
      "400": {"$type": "color", "value": "#A3A3A3"},
      "300": {"$type": "color", "value": "#D1D1D1"},
      "200": {"$type": "color", "value": "#E5E5E5"},
      "150": {"$type": "color", "value": "#EEEEEE"},
      "100": {"$type": "color", "value": "#F2F2F2"},
      "near-white": {"$type": "color", "value": "#F7F7F7"},
      "white": {"$type": "color", "value": "#FFFFFF"}
    },
    "brand": {
      "primary": {
        "700": {"$type": "color", "value": "#1D4ED8"},
        "600": {"$type": "color", "value": "#2563EB"}
      },
      "accent": {
        "500": {"$type": "color", "value": "#10B981"}
      }
    },
    "state": {
      "success": {"500": {"$type": "color", "value": "#16A34A"}},
      "warning": {"500": {"$type": "color", "value": "#F59E0B"}},
      "error": {"500": {"$type": "color", "value": "#DC2626"}},
      "info": {"500": {"$type": "color", "value": "#0EA5E9"}}
    },
    "semantic": {
      "bg/default": {"$type": "color", "value": "{color.neutral.near-white.value}"},
      "bg/elevated": {"$type": "color", "value": "{color.neutral.100.value}"},
      "bg/inverse": {"$type": "color", "value": "{color.neutral.near-black.value}"},
      "text/default": {"$type": "color", "value": "{color.neutral.900.value}"},
      "text/muted": {"$type": "color", "value": "{color.neutral.600.value}"},
      "text/inverse": {"$type": "color", "value": "{color.neutral.near-white.value}"},
      "text/link": {"$type": "color", "value": "{color.brand.primary.700.value}"},
      "brand/solid": {"$type": "color", "value": "{color.brand.primary.700.value}"},
      "brand/soft": {"$type": "color", "value": "#E8F1FE"},
      "border/default": {"$type": "color", "value": "{color.neutral.200.value}"},
      "border/strong": {"$type": "color", "value": "{color.neutral.300.value}"},
      "focus/outline": {"$type": "color", "value": "#3B82F6"}
    }
  },
  "typography": {
    "fontFamily": {
      "sans": {"$type": "fontFamily", "value": ["Manrope", "system-ui", "Arial", "sans-serif"]}
    },
    "size": {
      "sm": {"$type": "fontSize", "value": "14px"},
      "md": {"$type": "fontSize", "value": "16px"},
      "lg": {"$type": "fontSize", "value": "18px"}
    },
    "lineHeight": {
      "normal": {"$type": "lineHeight", "value": "1.55"}
    },
    "weight": {
      "regular": {"$type": "fontWeight", "value": 400},
      "medium": {"$type": "fontWeight", "value": 500},
      "semibold": {"$type": "fontWeight", "value": 600}
    }
  },
  "space": {
    "4": {"$type": "spacing", "value": "4px"},
    "8": {"$type": "spacing", "value": "8px"},
    "12": {"$type": "spacing", "value": "12px"},
    "16": {"$type": "spacing", "value": "16px"},
    "24": {"$type": "spacing", "value": "24px"}
  },
  "radius": {
    "sm": {"$type": "borderRadius", "value": "6px"},
    "md": {"$type": "borderRadius", "value": "12px"},
    "lg": {"$type": "borderRadius", "value": "16px"},
    "2xl": {"$type": "borderRadius", "value": "20px"}
  },
  "shadow": {
    "xs": {"$type": "shadow", "value": "0px 1px 2px rgba(0,0,0,0.07)"},
    "sm": {"$type": "shadow", "value": "0px 2px 6px rgba(0,0,0,0.08)"},
    "md": {"$type": "shadow", "value": "0px 8px 24px rgba(0,0,0,0.08)"}
  },
  "motion": {
    "duration": {
      "fast": {"$type": "duration", "value": "120ms"},
      "normal": {"$type": "duration", "value": "200ms"},
      "slow": {"$type": "duration", "value": "320ms"}
    },
    "easing": {
      "standard": {"$type": "cubicBezier", "value": [0.2, 0, 0, 1]}
    }
  },
  "component": {
    "button": {
      "primary": {
        "bg": {"$type": "color", "value": "{color.semantic.brand/solid.value}"},
        "text": {"$type": "color", "value": "{color.neutral.white.value}"},
        "radius": {"$type": "borderRadius", "value": "{radius.lg.value}"}
      }
    },
    "card": {
      "bg": {"$type": "color", "value": "{color.semantic.bg/elevated.value}"},
      "shadow": {"$type": "shadow", "value": "{shadow.md.value}"},
      "radius": {"$type": "borderRadius", "value": "{radius.2xl.value}"}
    }
  },
  "modes": {
    "dark": {
      "color.semantic.bg/default.value": "{color.neutral.near-black.value}",
      "color.semantic.text/default.value": "{color.neutral.near-white.value}",
      "color.semantic.border/default.value": "{color.neutral.700.value}",
      "color.semantic.brand/soft.value": "#0F1A2E"
    },
    "high-contrast": {
      "color.semantic.bg/default.value": "#000000",
      "color.semantic.text/default.value": "#FFFFFF",
      "color.semantic.border/strong.value": "#FFFFFF"
    }
  }
}

