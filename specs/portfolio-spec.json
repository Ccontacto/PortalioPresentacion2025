      "radius": "{tokens.radius.pill}",
      "paddingX": "{tokens.space.2}",
      "paddingY": "2px",
      "fontSize": "{tokens.typography.size.xs}"
    },
    "chip.tech": {
      "bg": "{tokens.color.mode.dark.bg.elevated}",
