        {
          "title": "{SKILLS_COL2_TITLE: Frontend / Web}",
          "items": [
            "{SKILLS_COL2_ITEM1: React, TypeScript, Vite}",
            "{SKILLS_COL2_ITEM2: Design systems, tokens, Tailwind}",
            "{SKILLS_COL2_ITEM3: Accesibilidad (WCAG 2.2), performance}"
