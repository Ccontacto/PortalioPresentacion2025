{
  "name": "portfolio-jctr-2025",
  "private": true,
  "version": "2.2.1",
  "type": "module",
  "packageManager": "npm@10",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "tsc && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 5176",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "tsc": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run --reporter=dot --coverage",
    "check:ci": "npm run tokens:build && npm run tokens:lint && npm run test:ci && npm run build",
    "setup:git": "bash scripts/configure-dev.sh",
    "deploy:cf": "bash scripts/deploy-cloudflare.sh",
    "tokens:build": "node scripts/tokens-build.mjs",
    "tokens:watch": "node scripts/tokens-build.mjs && chokidar \"tokens/**/*.json\" -c \"node scripts/tokens-build.mjs\"",
    "tokens:lint": "node scripts/token-lint.mjs",
    "audit:a11y": "vitest run --reporter=dot __tests__/a11y.*.test.tsx src/components/__tests__/a11y.*.test.tsx",
    "audit:lh": "lighthouse http://localhost:5176 --only-categories=accessibility,seo,performance --output html --output-path ./logs/lh-report.html --quiet",
    "server": "json-server --watch db.json --port 3001"
  },
  "dependencies": {
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "focus-trap-react": "^11.0.4",
    "framer-motion": "^12.23.24",
    "jscpd": "^4.0.5",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.552.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ts-prune": "^0.10.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.9.0",
    "chokidar": "^3.6.0",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jest-axe": "^9.0.0",
    "jsdom": "^27.0.1",
    "json-server": "^1.0.0-beta.3",
    "lighthouse": "^12.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.5.2",
    "vite": "^7.1.12",
    "vitest": "^4.0.5",
    "wrangler": "^4.45.3"
  }
}
